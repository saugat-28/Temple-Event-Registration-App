<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginRight="10dp"
    android:background="@color/list_item_background"
    android:padding="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#FCFCDA"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Pooja Name:"
                android:textColor="#8F3232"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pooja_register_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                tools:text="Pooja 1"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Price: â‚¹"
                android:textColor="#8F3232"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pooja_register_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="250"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Date:"
                android:textColor="#8F3232"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pooja_register_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                tools:text="12/08/21"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/pooja_register_button"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="150dp"
                android:width="20dp"
                android:height="100dp"
                android:backgroundTint="#BB371A"
                android:text="@string/register"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/description"
                android:textColor="#8F3232"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pooja_register_desc"
                android:layout_width="213dp"
                android:layout_height="59dp"
                android:layout_marginStart="5dp"
                tools:text="This is Pooja 1"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>