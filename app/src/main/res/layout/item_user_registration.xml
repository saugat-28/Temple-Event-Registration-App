<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="20dp"
    android:padding="20dp"
    android:layout_margin="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/reg_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pooja Name:"
            android:textColor="#8F3232"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/reg_name_label"
            app:layout_constraintStart_toEndOf="@id/reg_name_label"
            app:layout_constraintBottom_toBottomOf="@id/reg_name_label"
            android:text="Pooja"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/reg_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Price: â‚¹"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/reg_name_label"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#8F3232"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reg_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250"
            app:layout_constraintTop_toTopOf="@id/reg_price_label"
            app:layout_constraintStart_toEndOf="@id/reg_price_label"
            app:layout_constraintBottom_toBottomOf="@id/reg_price_label"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_reminder"
            android:layout_width="105dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:width="20dp"
            android:height="100dp"
            android:backgroundTint="#BB371A"
            android:text="Set Reminder"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/reg_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            app:layout_constraintTop_toBottomOf="@id/reg_price_label"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:textColor="#8F3232"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="12/08/21"
            app:layout_constraintTop_toTopOf="@id/reg_date_label"
            app:layout_constraintBottom_toBottomOf="@id/reg_date_label"
            app:layout_constraintStart_toEndOf="@id/reg_date_label"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>